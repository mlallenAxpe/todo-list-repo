<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>

<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import io.github.palexdev.mfxcore.controls.Label?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ScrollPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/25"
            fx:controller="com.tutorialseu.todoapp.controller.ToDoController"
            prefHeight="400" prefWidth="600"
>
    <VBox spacing="10" AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <HBox alignment="CENTER">
            <Label text="To-Do List" styleClass="title" />
        </HBox>
        <HBox spacing="10">
            <MFXButton text="Add Task" onAction="#handleAddTask" prefHeight="30"/>
            <Pane HBox.hgrow="ALWAYS" />
            <MFXComboBox fx:id="statusComboBox" promptText="All" prefHeight="30" />
        </HBox>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    vbarPolicy="NEVER" hbarPolicy="NEVER"
                    styleClass="scrollList"
        >
            <VBox fx:id="taskListVBox" id="taskList" spacing="10" prefHeight="400">

            </VBox>
        </ScrollPane>

    </VBox>


</AnchorPane>
